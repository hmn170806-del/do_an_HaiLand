    <script>
        // Lấy trạng thái đăng nhập từ PHP
        const isLoggedIn = <?php echo isset($_SESSION['user_id']) ? 'true' : 'false'; ?>;

        // Hàm mở Modal
        function showModal(message) {
            document.getElementById('modalMessage').innerText = message;
            document.getElementById('loginModal').style.display = 'flex';
        }

        // Hàm đóng Modal
        function closeModal() {
            document.getElementById('loginModal').style.display = 'none';
        }

        // Đóng modal khi click ra ngoài
        window.onclick = function(event) {
            const modal = document.getElementById('loginModal');
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        // --- LOGIC CHÍNH ---
        document.addEventListener("DOMContentLoaded", function() {
            
            if (!isLoggedIn) {
                // 1. Chặn click vào các Link có class "need-login" (Danh mục, Sản phẩm)
                const restrictedLinks = document.querySelectorAll('.need-login');
                
                restrictedLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        e.preventDefault(); // Ngưng chuyển trang
                        showModal("Bạn cần đăng nhập để xem chi tiết hoặc danh mục này!");
                    });
                });

                // 2. Tự động hiện Popup sau 2 phút (120000 ms)
                setTimeout(() => {
                    showModal("Bạn đã ghé thăm được một lúc. Hãy đăng nhập để có trải nghiệm tốt nhất nhé!");
                }, 120000); 
            }
        });
    </script>

