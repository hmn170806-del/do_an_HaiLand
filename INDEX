                                <?php 
                                    $images = explode(',', $row['image']);
                                    $first_image = trim($images[0]);
                                    $image_path = "uploads/" . $first_image;
                                    
                                    // Thêm class need-login vào link ảnh
                                    echo '<a href="product_detail.php?id='.$row['id'].'" class="need-login">';
                                    if (!empty($first_image) && file_exists($image_path)) {
                                        echo '<img src="'.$image_path.'" alt="'.htmlspecialchars($row['name']).'">';
                                    } else {
                                        echo '<img src="https://via.placeholder.com/300x200?text=No+Image" alt="No Image">';
                                    }
                                    echo '</a>';
                                ?>
